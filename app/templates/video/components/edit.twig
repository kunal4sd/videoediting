<div class="col-md-12 my-4">
    <div class="card">
        <div class="card-header row mx-0 px-0">
            <div class="col-md-1 text-center">
                Status
            </div>
            <div class="col-md-4 text-left">
                Headline
            </div>
            <div class="col-md-1 text-center">
                Article ID
            </div>
            <div class="col-md-2 text-center">
                Issue Date
            </div>
            <div class="col-md-1 text-center">
                Duration
            </div>
            <div class="col-md-1 text-center">
                File Size
            </div>
            <div class="col-md-2 text-center">
                Actions
            </div>
        </div>
        <ul id="video-movies-holder" class="list-group list-group-flush mx-0" data-movie-list-url="{{ base_url() }}{{ path_for('video.action.get_movie_list') }}">
            {% for movie in movies %}
                {% if movie.src %}
                    {% include 'components/lists/movie.twig' %}
                {% endif %}
            {% endfor %}
        </ul>
        <div class="modal fade" id="video-modal-delete-article" tabindex="-1" role="dialog" aria-labelledby="video-modal-delete-article-body" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="video-modal-delete-article-body">Delete movie</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this movie?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" name="delete-btn" class="btn btn-danger"><span class="oi oi-trash"></span> Delete</button>
                </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="video-modal-edit-article" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
                <div class="modal-content">
                    <form id="article-edit-article" action="{{ base_url() }}{{ path_for('article.action.edit_article') }}" method="post" novalidate>
                        <div class="modal-body row">
                            <div class="col-lg-6 m-auto">
                                <video id="video-modal-movie-play" controls="true" autoplay="false" name="media" width="100%">
                                    <source src="" type="video/mp4">
                                </video>
                            </div>
                            <div class="col-lg-6">
                                    {{ csrf.fields | raw }}
                                    <input type="hidden" name="id" value>
                                    <input type="hidden" name="status" value>
                                    <div class="form-group">
                                        <label for="title" class="col-form-label">Title:</label>
                                        <input type="text" name="headline" class="form-control" value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="text" class="col-form-label">Text:</label>
                                        <input type="text" name="text" class="form-control" value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="text" class="col-form-label">Keywords:</label>
                                        <input type="hidden" name="keywords" value="">
                                        <select id="article-keywords-selector" data-action="{{ base_url() }}{{ path_for('article.action.search_keyword') }}" data-initial-action="{{ base_url() }}{{ path_for('article.action.get_keyword') }}"></select>
                                    </div>
                                    <input type="submit" class="display-none">

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" id="video-modal-edit-article-button-submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>