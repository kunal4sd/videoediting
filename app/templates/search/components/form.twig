<div class="col-md-12 mb-4 d-flex">
    <div class="card flex-fill">
        <div class="card-header">
            Search
        </div>
        <div class="card-body flex-fill">
            <form id="listing-get-list" action="{{ base_url() }}{{ path_for('video.action.search') }}" method="post">
                {{ csrf.fields | raw }}
                <div class="row form-group">
                    <div class="col-xl-3 mb-4">
                        <label for="country">Countries</label>
                        <input type="hidden" name="country" id="listing-country-input">
                        <select name="countries[]" id="listing-country-select" multiple="multiple" class="form-control">
                            {% for country in countries %}
                                <option
                                        value="{{ country.id }}"
                                        {% if form.country_id == country.id %} selected {% endif %}
                                >{{ country.name_en }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xl-3 mb-4">
                        <label for="publication">Publications</label>
                        <input type="hidden" name="publication" id="listing-publication-input">
                        <select name="publications[]" id="listing-publication-select" multiple="multiple" class="form-control">
                            {% for publication in publications %}
                                <option
                                        value="{{ publication.id }}"
                                        {% if form.publication == publication.id %} selected {% endif %}
                                >{{ publication.name_en }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xl-3 mb-4">
                        <label for="start_date">From Date</label>
                        <input
                                type="text"
                                name="start_date"
                                id="listing-start-date"
                                class="form-control"
                                value="{{ form.start_date ? form.start_date : '' }}"
                                autocomplete="off"
                        >
                    </div>
                    <div class="col-xl-3 mb-4">
                        <label for="start_date">To Date</label>
                        <input
                                type="text"
                                name="end_date"
                                id="listing-end-date"
                                class="form-control"
                                value="{{ form.end_date ? form.end_date : '' }}"
                                autocomplete="off"
                                width="100px"
                        >
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-3 mb-2">
                        <input
                                type="text"
                                name="text"
                                class="form-control"
                                placeholder="Search term"
                                value="{{ form.text ? form.text : '' }}"
                                autocomplete="off"
                                required
                        >
                    </div>
                    <div class="col-xl-3 mb-2">
                        <input type="submit" class="d-none">
                        <button type="button" id="search_button" class="btn btn-primary btn-block mb-3" data-loading="0">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
