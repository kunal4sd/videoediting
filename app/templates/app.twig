<!doctype html>
<html lang="en">
    <head>
        <title>{{ page_title }} @ Mediaobserver</title>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ base_url() }}/images/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ base_url() }}/images/favicon-16x16.png">
        <link rel="icon" type="image/x-icon" href="{{ base_url() }}/images/favicon.ico">
        <link rel="stylesheet" href="{{ base_url() }}/css/libs/bootstrap.min.css">
        <link rel="stylesheet" href="{{ base_url() }}/css/libs/open-iconic-bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ base_url() }}/css/styles.css">
    </head>
    <body>

        <header>
            {% include 'components/navigation.twig' %}
        </header>

        <div id="global-alerts-holder" class="fixed-top z-index-above">
        </div>

        <div class="m-3">
            {% block content %}{% endblock %}
        </div>

        <footer>
            {# {% include 'components/footer.twig' %} #}
        </footer>

        <script src="{{ base_url() }}/js/libs.min.js?v=20"></script>
        <script src="{{ base_url() }}/js/main.min.js?v=20"></script>

        <div id="global-templates-holder" class="d-none">
            {% include 'components/alerts/danger.twig' %}
            {% include 'components/alerts/info.twig' %}
            {% include 'components/alerts/success.twig' %}
            {% include 'components/alerts/warning.twig' %}
            {% include 'components/alerts/playlist.twig' %}
            {% include 'components/alerts/test_playlist.twig' %}
            {% include 'components/alerts/search_text.twig' %}
            {% include 'components/lists/movie.twig' %}
            {% include 'components/lists/video.twig' %}
            {% include 'components/badges/info.twig' %}
            {% include 'components/badges/danger.twig' %}
            {% include 'components/badges/primary.twig' %}
            {% include 'components/badges/success.twig' %}
            {% include 'components/badges/warning.twig' %}
            {% include 'components/badges/secondary.twig' %}
        </div>
        {% include 'components/modals/reload.twig' %}
    </body>
</html>
