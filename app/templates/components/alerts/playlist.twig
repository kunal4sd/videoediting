<div
    name="{% if not content %}global_template_alert_playlist{% endif %}"
    class="list-group-item list-group-item-action list-group-item-success cursor-pointer"
    data-poster="{% if playlist.poster %}{{ playlist.poster }}{% endif %}"
    data-url="{% if playlist.url %}{{ playlist.url }}{% endif %}"
>
    <div class="d-fill row">
        <div class="col-sm-3 d-fill m-auto">
            <img name="poster" src="{{ playlist.poster }}" class="rounded img-fluid">
        </div>
        <div class="col-sm-9 d-fill m-auto row">
            <div class="text-left" name="start_day"> {% if playlist.start_day %}{{ playlist.start_day }}{% endif %}&nbsp;</div>
            <div class="text-left" name="start_hour">&nbsp;{% if playlist.start_hour %}{{ playlist.start_hour }}{% endif %} </div>
            <div class="text-left">&nbsp;-&nbsp;</div>
            <div class="text-left" name="end_hour"> {% if playlist.end_hour %}{{ playlist.end_hour }}{% endif %}</div>
        </div>
    </div>
</div>